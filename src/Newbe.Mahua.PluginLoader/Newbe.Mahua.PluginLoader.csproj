<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452</TargetFrameworks>
    <Authors>Newbe</Authors>
    <Company>Newbe</Company>
    <PackageIconUrl>https://raw.githubusercontent.com/Newbe36524/Newbe.Mahua.Framework/master/logo.png</PackageIconUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/Newbe36524/Newbe.Mahua.Framework/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>http://www.newbe.cf</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Newbe36524/Newbe.Mahua.Framework</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>Newbe Mahua</PackageTags>
    <RootNamespace>Newbe.Mahua</RootNamespace>
    <PackageOutputPath>../build/</PackageOutputPath>
    <VersionPrefix>1.4.0</VersionPrefix>
    <VersionSuffix>dev07</VersionSuffix>
    <Description>
      Newbe.Mahua运行时核心，是SDK能够支持多平台的核心所在。
    </Description>
    <PackageReleaseNotes>
      ## 1.4

      增加Newbe.Mahua.MPQ实现，支持MyPcQQ平台。
      ---
      ## 1.3.0

      使用MessagePack替代JSON序列化，消息处理速度明显提升。
      ---
      ## 1.2

      使用MediatR作为命令模式中介者，减低内存消耗。

      ---
      ## 1.0

      主框架发布，支持CQP和Amanda机器人平台。
    </PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net452|AnyCPU'">
    <NoWarn>1701;1702;1705;1591</NoWarn>
    <DocumentationFile>bin\Debug\net452\Newbe.Mahua.PluginLoader.xml</DocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <DefineConstants>TRACE;DEBUG;LIBLOG_PUBLIC</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net452|AnyCPU'">
    <NoWarn>1701;1702;1705;1591</NoWarn>
    <DocumentationFile>bin\Release\net452\Newbe.Mahua.PluginLoader.xml</DocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <DefineConstants>TRACE;LIBLOG_PUBLIC</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Include="bin\$(Configuration)\net452\MediatR.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Framework\</PackagePath>
    </None>
    <None Include="bin\$(Configuration)\net452\Newbe.Mahua.PluginLoader.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Framework\</PackagePath>
    </None>
    <None Include="bin\$(Configuration)\net452\Newbe.Mahua.PluginLoader.pdb">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Framework\</PackagePath>
    </None>
    <None Include="bin\$(Configuration)\net452\Tungsten.Domains.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Framework\</PackagePath>
    </None>
    <None Include="bin\$(Configuration)\net452\System.Threading.Tasks.Extensions.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Framework\</PackagePath>
    </None>
    <None Include="bin\$(Configuration)\net452\System.ValueTuple.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Framework\</PackagePath>
    </None>
    <None Include="bin\$(Configuration)\net452\MessagePack.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Framework\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MediatR" Version="3.0.1" />
    <PackageReference Include="MessagePack" Version="1.7.2" />
    <PackageReference Include="Tungsten.Domains" Version="1.0.0" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="6.7.0.4267">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="StyleCop.Error.MSBuild" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="StyleCop.MSBuild" Version="5.0.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Newbe.Mahua\Newbe.Mahua.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="App_Packages\LibLog.4.2\LibLog.cs">
      <ExcludeFromSourceAnalysis>True</ExcludeFromSourceAnalysis>
      <ExcludeFromStyleCop>True</ExcludeFromStyleCop>
    </Compile>
  </ItemGroup>

  <Target Name="BeforeBuild">
    <ItemGroup>
      <SonarQubeSetting Include="sonar.exclusions">
        <Value>**/App_Packages/**/*</Value>
      </SonarQubeSetting>
    </ItemGroup>
  </Target>

</Project>
