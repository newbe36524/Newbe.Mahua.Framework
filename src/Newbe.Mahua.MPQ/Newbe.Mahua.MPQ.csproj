<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452</TargetFrameworks>
    <Authors>Newbe</Authors>
    <Company>Newbe</Company>
    <PackageIconUrl>https://raw.githubusercontent.com/Newbe36524/Newbe.Mahua.Framework/master/logo.png</PackageIconUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/Newbe36524/Newbe.Mahua.Framework/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>http://www.newbe.cf</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Newbe36524/Newbe.Mahua.Framework</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>Newbe Mahua MPQ MyPcQQ</PackageTags>
    <PackageOutputPath>../build/</PackageOutputPath>
    <IsTool>true</IsTool>
    <DevelopmentDependency>true</DevelopmentDependency>
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>dev01</VersionSuffix>
    <Description>
      Newbe.Mahua 针对MyPCQQ平台推出的平台支持包。
      0 长久有效的技术支持及更新维护+独占功能
      1 轻壳 极速运行
      2 企业Q登录
      3 不接入云黑机制
      4 插件初始情况默认启用
      5 允许接入UU 若快两个打码
      6 移除推广信息
      7 商业使用许可
      https://f.mypcqq.cc/thread-4900-1-1.html
    </Description>
    <PackageReleaseNotes>
      ## 1.0.0

      初版
    </PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net452|AnyCPU'">
    <NoWarn>1701;1702;1705;1591</NoWarn>
    <DocumentationFile>bin\Debug\net452\Newbe.Mahua.MPQ.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net452|AnyCPU'">
    <NoWarn>1701;1702;1705;1591</NoWarn>
    <DocumentationFile>bin\Release\net452\Newbe.Mahua.MPQ.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\GlobalBin\init.ps1" Link="Tools\init.ps1">
      <Pack>true</Pack>
      <PackagePath>tools\</PackagePath>
    </None>
    <None Include="..\Newbe.Mahua.MPQ.Native\bin\Release\Newbe.Mahua.MPQ.Native.dll" Link="bin\Release\net452\CLR\Newbe.Mahua.MPQ.Native.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Platform\MPQ\CLR\</PackagePath>
    </None>
    <None Include="..\Newbe.Mahua.MPQ.Native\bin\Release\Newbe.Mahua.MPQ.Native.pdb" Link="bin\Release\net452\CLR\Newbe.Mahua.MPQ.Native.pdb">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Platform\MPQ\CLR\</PackagePath>
    </None>
    <None Include="..\Newbe.Mahua.MPQ.Native\bin\Release\x86\Newbe.Mahua.MPQ.Native.dll" Link="bin\Release\net452\Native\Newbe.Mahua.MPQ.Native.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Platform\MPQ\Native\</PackagePath>
    </None>
    <None Include="bin\Release\net452\Newbe.Mahua.MPQ.dll">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Platform\MPQ\CLR\</PackagePath>
    </None>
    <None Include="bin\Release\net452\Newbe.Mahua.MPQ.pdb">
      <Pack>true</Pack>
      <PackagePath>content\NewbeLibs\Platform\MPQ\CLR\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Newbe.Mahua.PluginLoader\Newbe.Mahua.PluginLoader.csproj" />
    <ProjectReference Include="..\Newbe.Mahua\Newbe.Mahua.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="bin\Release\net452\Native\" />
    <Folder Include="bin\Release\net452\CLR\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.6.2" />
    <PackageReference Include="StyleCop.Error.MSBuild" Version="1.0.0" />
    <PackageReference Include="StyleCop.MSBuild" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="NativeApi\IMpqApi.cs">
      <ExcludeFromSourceAnalysis>True</ExcludeFromSourceAnalysis>
      <ExcludeFromStyleCop>True</ExcludeFromStyleCop>
    </Compile>
  </ItemGroup>

</Project>
